{
  "compilerOptions": {
    "target": "ES6",
    "module": "none",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "lib": [
      "ES6"
    ],
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "../backup.ignore.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}